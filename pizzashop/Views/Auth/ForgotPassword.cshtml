@model pizzashop_repository.ViewModels.ForgotViewModel

@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div class="login-main">
        <div class="row flex-coloum m-0">
            <div class="col-lg-6 p-0 ">
                <img class="dominos-bg img-fluid" src="~/images/dominos_background.jpg" alt="">
            </div>
            <div class="col-lg-6 p-0 row2 d-flex justify-content-center">
                    <div class="login-side d-flex-coloum align-content-center">
                        <form method="post">
                            <div class="d-flex justify-content-center">
                            <img class="img-fluid shop-logo" src="~/images/logos/pizzashop_logo.png" alt="">
                            <div class="ms-2 h1 text-center align-item-center shop-name" style="align-content: center;">
                                PIZZASHOP</div>
                        </div>
                        <div class="h4 mt-4 ">Forgot Password</div>
                        <p class="mt-3">Enter your email and we'll send you link to reset your password</p>
                        <div class="input-group">
                            <input type="email" class="form-control mt-3" value="@ViewData["Email"]" placeholder="Email" asp-for="Email" aria-label="Email" aria-describedby="basic-addon1">

                        </div>

                        <button type="" class="btn btn-primary login-btn mt-3 w-100 mt-2" asp-controller="Auth"asp-action="ForgotPassword">Send</button>
                        <div class="text-center mt-2"><a class="text-decoration-none" asp-controller="Auth"asp-action="Login">Back to login</a></div>
                        </form>

                        @if(TempData["success"] != null )
                        {
                            <div class="alert alert-success"> 
                                @TempData["success"]
                            </div>
                        }

                    </div>
            </div>
        </div>
    </div>
    <script src="./js/custom.js"></script>
</body>

</html>
