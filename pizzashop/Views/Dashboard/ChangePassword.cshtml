@model pizzashop_repository.ViewModels.ChangePasswordViewModel;

<form method="post">
    <div class=" d-flex mt-3 p-3 justify-content-between ">
        <div class="h2 blue-color"><strong>Change Password</strong></div>
    </div>

    <div>
        <input type="email" style="display: none;" asp-for="Email">
    </div>

    <div class="ms-5">
        <small class="sidebar-name">Enter a new Password to update your account credentials</small>
        <div class="form-floating mt-2">
            <input style="position: relative; width: 390px;" asp-for="CurrentPassword" type="password"
                class="form-control" id="CurrentPassword">
            <label for="floatingPassword">Current Password*</label>
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>

        </div>
        <div class="form-floating mt-2">
            <input style="position: relative; width: 390px;" asp-for="NewPassword" type="password" class="form-control"
                id="NewPassword">
            <label for="floatingPassword">New Password*</label>
            <span asp-validation-for="NewPassword" class="text-danger"></span>


        </div>
        <div class="form-floating mt-2">
            <input style="position: relative; width: 390px;" asp-for="ConfirmPassword" type="password"
                class="form-control" id="ConfirmPassword">
            <label for="floatingPassword">Confirm New Password*</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>


        </div>

        <div class="mt-3">
            <button type="submit" class="btn navbar-color text-white">Submit</button>
            <button type="button" class="btn cancel-btn-color ms-1">Cancel</button>
        </div>
        @* @TempData["success"]
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["error"]
            </div>
        } *@
    </div>
    <div class="text-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

</form>